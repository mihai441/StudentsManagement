@model StudentActivityInfo
@{
    var activityList = Model.ActivityDates.ToList();
    ViewData["Title"] = @Model.ActivityName;
}
<h3>@Model.ActivityName</h3>
<div class="row">
    <div class="col-md-6">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Attendance</th>
                    <th scope="col">Grade</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (activityList.Count != 0)
                    {
                        foreach (var activity in activityList)
                        {
                            <tr>
                                <td scope="row">@activity.Date</td>
                                @if (activity.Attendance)
                                {
                                     <th scope="row">1</th>
                                }
                                else
                                {
                                    <th scope="row">0</th>
                                }
                                <th scope="row">@activity.Grade</th>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
        <a asp-action="Index">Back to activity list</a>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}