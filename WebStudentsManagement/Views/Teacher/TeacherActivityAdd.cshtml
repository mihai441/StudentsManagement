@model SingleStudentActivityInfo
@{
    ViewData["Title"] = Model.Activity.Name + " - " + Model.Student.Name;
}
<h3>Add row on Student @Model.Student.Name</h3>
<h4>Activity @Model.Activity.Name</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="TeacherActivityCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ActivityDate.ActivityId" value="@Model.ActivityDate.ActivityId" class="form-control" />
            <input type="hidden" asp-for="ActivityDate.StudentId" value="@Model.ActivityDate.StudentId" class="form-control" />
            <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                    <input asp-for="ActivityDate.Date" type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                    <script type="text/javascript">
                    $(function () {
                        $('#datetimepicker1').datetimepicker();
                    });
                    </script>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ActivityDate.Grade" class="control-label"></label>
                <input asp-for="ActivityDate.Grade" class="form-control" />
                <span asp-validation-for="ActivityDate.Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityDate.Attendance" class="control-label"></label>
                <input asp-for="ActivityDate.Attendance" class="form-control" />
                <span asp-validation-for="ActivityDate.Attendance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="TeacherActivityDetails" asp-route-activityId="@Model.Activity.Id" asp-route-studentId="@Model.Student.Id">Student details</a>
    <br />
    <a asp-route="Activities" asp-route-activityId="@Model.Activity.Id">Back to student list</a>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}