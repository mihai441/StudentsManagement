@model TeacherActivityInfo
@{
    var activityList = Model.ActivityDates.ToList();
    ViewData["Title"] = @Model.ActivityName + " - " + @Model.StudentName;
}
<h3>@Model.ActivityName</h3>
<h4>Student @Model.StudentName</h4>
<div class="row">
    <div class="col-md-6">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Attendance</th>
                    <th scope="col">Grade</th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (activityList.Count != 0)
                    {
                        foreach (var activity in activityList)
                        {
                            <tr>
                                <td scope="row">@activity.Date</td>
                                @if (activity.Attendance)
                                {
                                     <th scope="row">1</th>
                                }
                                else
                                {
                                    <th scope="row">0</th>
                                }
                                <th scope="row">@activity.Grade</th>
                                <td><a asp-action="TeacherActivityEdit" asp-route-activityId="@Model.IdActivity" asp-route-studentId="@Model.StudentId" asp-route-id="@activity.Id">Edit</a></td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
        <a asp-action="TeacherActivityAdd" asp-route-activityId="@Model.IdActivity" asp-route-studentId="@Model.StudentId">Add new information</a>
        <br />
        <a asp-route="ActivityIndex" asp-route-activityId="@Model.IdActivity">Back to student list</a>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}