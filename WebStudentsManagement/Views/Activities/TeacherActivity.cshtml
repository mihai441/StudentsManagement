@model AllStudentsOnActivity
@{
    ViewData["Title"] = @Model.ActivityName;
}
<h3>@Model.ActivityName</h3>
<div class="row">
    <div class="col-md-6">
        <h4>All students at this activity</h4>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Student Name</th>
                    <th scope="col">Student Surname</th>
                </tr>
            </thead>
            <tbody>
                @for (int iterator = 0; iterator < Model.Id.Count; ++iterator)
                {
                    <tr>
                        <th scope="row">
                            @Model.Name[iterator]
                        </th>
                        <th scope="row">
                            @Model.Name[iterator]
                        </th>
                        <td>
                            <a asp-action="Edit" asp-route-id="1">Edit</a> |
                            <a asp-action="Activity/@Model.ActivityId/Student" asp-route-id="@Model.Id[iterator]/Details">Details</a> |
                            <a asp-action="Delete" asp-route-id="1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}