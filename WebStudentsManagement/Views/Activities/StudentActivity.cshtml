@model StudentActivityInfo
@{
    ViewData["Title"] = @Model.ActivityName;
}
<h3>@Model.ActivityName</h3>
<div class="row">
    <div class="col-md-6">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Attendance</th>
                    <th scope="col">Grade</th>
                </tr>
            </thead>
            <tbody>
                @for (int iterator = 0; iterator < Model.Date.Count; ++iterator)
                {
                    <tr>
                        <td scope="row">@Model.Date[iterator]</td>
                        @if (Model.Attendance[iterator])
                        {
                            <th scope="row">1</th>
                        }
                        else
                        {
                            <th scope="row">0</th>
                        }
                        <th scope="row">@Model.Grade[iterator]</th>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Index">Back to activity list</a>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}